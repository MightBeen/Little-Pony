<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.io.portainer.mapper.sys.SysCheckListMapper">

<select id="getExpiredDatesByType" resultType="java.time.LocalDateTime">
    SELECT ue.expired FROM ptr_user_endpoint ue
                               LEFT JOIN ptr_endpoint ep
                                         ON ep.id = ue.endpoint_id
    WHERE ep.resource_type = #{resultType};
    </select>
</mapper>
